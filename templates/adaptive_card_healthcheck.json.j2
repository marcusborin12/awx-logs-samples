{
  "type": "message",
  "attachments": [
    {
      "contentType": "application/vnd.microsoft.card.adaptive",
      "contentUrl": null,
      "content": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "type": "AdaptiveCard",
        "version": "1.5",
        "body": [
          {
            "type": "TextBlock",
            "text": "üîç Healthcheck Report - {{ job_template_name | default('AWX Job') }}",
            "weight": "Bolder",
            "size": "Large"
          },
          {
            "type": "FactSet",
            "facts": {{ HEALTHCHECK | to_json }}
          },
          {
            "type": "TextBlock",
            "text": "{{ details | default('Sem detalhes adicionais.') }}",
            "wrap": true,
            "spacing": "Medium"
          }
        ],
        "actions": [
          {
            "type": "Action.OpenUrl",
            "title": "Ver Logs no AWX",
            "url": "https://ansible.local/#/jobs/playbook/{{ job_id | default('1') }}"
          }
        ]
      }
    }
  ]
}
